---
layout: layouts/patched-base.njk
---
<div class="flex flex-col w-full items-start flex-grow">
  <div class="text-5xl my-8 space-y-2 text-slate-800 dark:text-white">
    <h2 class="font-medium text-6xl">{{ name }}</h2>
    <p class="leading-relaxed">{{ header }}</p>
  </div>
  
  <ul class="flex space-x-8 text-3xl my-10">
    {% for link in links %}
      <li><a href="{{ link.url }}">{{ link.title }}</a></li>
    {% endfor %}
  </ul>
  
  <div>
    {{ content | safe }}
  </div>
</div>
