<nav class="fixed z-50 flex flex-col items-center h-14 top-0 left-0 right-0 w-full bg-white dark:bg-slate-900">
  <div class="flex items-center h-full justify-between text-xl w-full max-w-screen-2xl px-4 md:px-6 xl:px-8">
    <div class="flex items-center">
      <a href="{{ '/' | url }}" class="font-bold text-2xl text-slate-800 dark:text-white">
        {{ intl.logo }}
      </a>
    </div>
    
    <div id="menu" class="flex flex-row items-center space-x-4 md:space-x-6 xl:space-x-8 h-full">
      <ul class="hidden md:flex flex-row items-center sm:space-x-4 md:space-x-6 xl:space-x-8 h-full">
        {%- for entry in collections.all | eleventyNavigation | multiLangNav(page.url) %}
          <li class="flex items-center h-full{% if entry.url == page.url %} nl-a{% endif %}"><a href="{{ entry.url | url }}" class="hover:text-slate-900 hover:dark:text-white transition">{{ entry.title }}</a></li>
        {%- endfor %}
      </ul>
      {% intl_switcher page.url %}
      <button type="button" class="w-10 h-10 p-1 rounded-md hover:text-slate-900 hover:dark:text-white transition" onclick="toggleMode()">
        <svg class="hidden dark:block" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
        <svg class="block dark:hidden" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <span class="sr-only">{{ intl.ui.dark_mode_toggle_title }}</span>
      </button>
      <button type="button" class="sm:hidden w-10 h-10 p-1 rounded-md hover:text-slate-900 hover:dark:text-white transition" onclick="showMenu('intl_menu')">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129" />
        </svg>
        <span class="sr-only">{{ intl.ui.intl_mobile_title }}</span>
      </button>
      <button type="button" class="sm:hidden w-10 h-10 p-1 rounded-md hover:text-slate-900 hover:dark:text-white transition" onclick="showMenu('mobile_menu')">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
        <span class="sr-only">{{ intl.ui.menu_mobile_title }}</span>
      </button>
    </div>
  </div>
</nav>

<div id="mobile_menu" onclick="hideMenu('mobile_menu')" class="hidden z-50 fixed flex-col justify-end w-screen h-screen inset-0 overflow-hidden bg-black/90">
  <div id="mobile_menu-content" class="text-xl py-4 bg-white text-slate-800 pb-14">
    <button type="button" class="relative flex items-center justify-center w-full px-4 h-14">
      <span class="font-bold">{{ intl.ui.menu_mobile_title }}</span>
      <span class="absolute top-0 right-0 px-4 flex items-center h-full">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </span>
    </button>
    {%- for entry in collections.all | eleventyNavigation | multiLangNav(page.url) %}
      <a href="{{ entry.url | url }}" class="flex border-t last:border-b items-center w-full justify-center px-4 h-14 hover:text-slate-900 transition underline-offset-4{% if entry.url == page.url %} underline{% endif %}">{{ entry.title }}</a>
    {%- endfor %}
  </div>
</div>

<div id="intl_menu" onclick="hideMenu('intl_menu')" class="hidden z-50 fixed flex-col justify-end w-screen h-screen inset-0 overflow-hidden bg-black/90">
  <div id="intl_menu-content" class="text-xl py-4 bg-white text-slate-800 pb-14">
    <button type="button" class="relative flex items-center justify-center w-full px-4 h-14">
      <span class="font-bold">{{ intl.ui.intl_mobile_title }}</span>
      <span class="absolute top-0 right-0 px-4 flex items-center h-full">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </span>
    </button>
    {% intl_links page.url %}
  </div>
</div>
