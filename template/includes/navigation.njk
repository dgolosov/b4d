<nav class="flex items-center justify-between text-xl">
  <div class="font-bold font-mono text-2xl text-slate-800 dark:text-white">
    <a href="{{ '/' | url }}" class="group flex items-center">
      <span>{{ meta.title }}</span>
    </a>
  </div>

  <div class="flex items-center space-x-8">
    {%- for entry in collections.all | eleventyNavigation | multiLangNav(page.url) %}
        <a href="{{ entry.url | url }}" class="hover:text-slate-900 hover:dark:text-white transition{% if entry.url == page.url %} text-slate-900 dark:text-white underline decoration-2 decoration-current/[.5] underline-offset-8{% endif %}">{{ entry.title }}</a>
    {%- endfor %}
      <button type="button" class="w-10 h-10 p-1 rounded-md hover:text-slate-900 hover:dark:text-white transition" onclick="toggleMode()">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
      </button>
    {% intl_switcher page.url %}
  </div>
</nav>
